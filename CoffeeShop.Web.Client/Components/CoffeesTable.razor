@if (Coffees is not null && Coffees.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Идентификатор</th>
                <th>Название</th>
                <th>Вид зёрен</th>
                <th>Стоимость</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var coffee in Coffees)
        {
            <tr>
                <td>@coffee.Id</td>
                <td>@coffee.Name</td>
                <td>@coffee.CoffeeSpeciesDisplayName</td>
                <td>RUB @coffee.UnitSellPriceRoubles</td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    [Parameter]
    public List<CoffeeResponseModel> Coffees { get; set; } = new();
}